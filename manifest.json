{
    "name": "post2txt",
    "version": "1.0.0",
    "description": "???",
    "manifest_version": 3,
    "author": "est-R",
    "action":{
        "default_popup": "./assets/index.html",
        "default_title": "post2txt"
    },
    "icons": {
      "128": "./assets/icon128.png"
    },  
    "background": {
        "service_worker": "background.js",
        "type": "module"
      },
      "web_accessible_resources": [
        {
          "resources": [
            "assets/dropDownNode.html",
            "localization/*"
          ],
          "matches": ["<all_urls>"]
        }
      ],
      "content_scripts": [
        {
            "matches": [
            "https://vk.com/*",
            "https://www.tumblr.com/*"
          ],
            "js": ["mainscript.js"]
        }
      ],
    "permissions":[
	  "downloads",
    "storage",
    "activeTab",
    "tabs",
    "scripting"
    ],
    "host_permissions": [
    	"https://vk.com/*",
      "https://www.tumblr.com/*"
    ]
}